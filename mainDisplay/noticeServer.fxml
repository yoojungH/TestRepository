<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mainDisplay.NoticeServerController">
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" prefHeight="23.0" prefWidth="50.0" text="제목" HBox.hgrow="ALWAYS" />
            <TextField fx:id="textNoticeTitle" prefHeight="23.0" prefWidth="250.0" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
      </HBox>
   </top>
   <center>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" prefWidth="50.0" text="내용">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <TextArea fx:id="textNoticeContent" prefHeight="200.0" prefWidth="250.0" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
      </HBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnServerStartStop" alignment="CENTER" mnemonicParsing="false" text="start" />
            <Label fx:id="labelServerStatus" prefWidth="150.0" />
            <Button fx:id="btnServerSend" mnemonicParsing="false" text="send" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
